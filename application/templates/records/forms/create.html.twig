<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create record</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        {{ form_start(createRecordForm) }}

        <div class="text-center mb-4">
            {{ form_row(createRecordForm.firstName) }}
        </div>

        <div class="text-center mb-4">
            {{ form_row(createRecordForm.lastName) }}
        </div>

        <div class="text-center mb-4">
            {{ form_row(createRecordForm.email) }}
        </div>

        <div class="text-center mb-4">
            {{ form_row(createRecordForm.phoneNumber) }}
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="create-record-submit" type="submit" class="btn btn-primary">Create</button>

        {{ form_end(createRecordForm) }}
    </div>
</div>